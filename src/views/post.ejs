<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
    <title>PG Blog | </title>
</head>
<body>
    <div>
        <nav class="w-100 position-fixed navbar bg-light" style="z-index: 1;">
            <div class="container-fluid">
                <div class="navbar">
                    <a class="nav-link me-3" aria-current="page" href="/pages/posts">PÃ¡gina inicial</a>
                    <a class="nav-link me-3" href="/pages/users/1">Meu perfil</a>
                    <a class="nav-link" href="/pages/users/signin">Sign in</a>
                </div>
            </div>
        </nav>
        <div class="container-fluid" style="max-width: 700px; padding-top: 100px;">
            <h2 id="title"></h2>
        </div>
        <div class="container-fluid" id="content" style="max-width: 700px;">
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2" crossorigin="anonymous"></script>
    <script type="module">
        import { findPostById, parseContentPost } from '/static/post/script.js'
        (async () => {
            const postId = window.location.href.split('/').pop()
            const post = await findPostById(postId)

            const title = document.getElementById('title')
            const content = document.getElementById('content')

            title.innerHTML = post.title
            content.innerHTML = parseContentPost(post.content)

            const documentTitle = document.getElementsByTagName('title')[0]
            documentTitle.innerHTML += post.title
        })()
    </script>
</body>
</html>